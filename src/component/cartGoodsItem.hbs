<div class="card">
    <div class="card-body row">
        <div class="col-2"><img class="card-img-top" src="{{image}}" alt="{{name}}"></div>
        <div class="col-4">
            <h2 class="card-title">{{name}}</h2>
            <p>{{description}}</p>
        </div>
        <div class="col-2">
            <h4>{{price.title}}</h4>
            <p>
            <h2>{{price.value}}</h2>
            </p>
        </div>
        <div class="col-2">
            <h4>{{amount}}</h4>
        </div>
        <div class="col-2">
            {{#each buttons}}
            <div class="flex-column m-3">
                {{#if isPrimary}}<button class="btn btn-primary text-white">{{text}}</button>{{/if}}
                {{#if isDanger}}<button class="btn btn-outline-danger">{{text}}</button>{{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</div>