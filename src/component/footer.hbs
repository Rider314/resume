{{#with footer}}
<footer>

    <div>
        {{#with social}}
        {{>link text=email.text value=email.value blank=true }}
        {{>link text=phone.text value=phone.value blank=true }}
        {{>link text=linkedin.text value=linkedin.value blank=true line=true noLine=true }}
        {{/with}}
    </div>

    <div class="my-3">
        <em>Copyright by {{../header.name.firstname}} {{../header.name.lastname}}</em>
    </div>

    <div>
        <em>{{../header.address}}</em>
    </div>
</footer>
{{/with}}