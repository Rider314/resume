<div class="card mb-3">
    <img class="card-img-top" src="{{img}}" alt="#">
    <div class="card-body">
        <div>
        {{#if isHot}}<button class="btn btn-warning rounded-pill">HOT!</button>{{/if}}
        {{#if isNew}}<button class="btn btn-primary rounded-pill">Нове</button>{{/if}}
            <div class=" mt-5">
            {{#if isFast}}<button class="btn  btn-success">Швидка доставка</button>{{/if}}
            </div>
            <div class="mt-3">
            {{#if isFree}}<button class="btn  btn-secondary">Безкоштовна доставка</button>{{/if}}
            </div>
        </div>
        <h4 class="mt-3">
            <il>{{name}}</il>
        </h4>
        {{#with review}}
        <p>
            <il>{{amount}} {{text}}</il>
        </p>
        {{/with}}
        <h4>
            <il>{{price}}</il>
        </h4>
        <p>
            <il>{{delivery}}</il>
        </p>
        {{#each buttons}}
        <div class="p-2">
            {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary">{{text}}</a>{{/if}}
            {{#if isSecondary}}<a href="{{link}}" class="btn btn-secondary">{{text}}</a>{{/if}}
        </div>
        {{/each}}
        <hr>
        {{#each characteristics}}
        <div>
            <ul>
                <li>{{title}}: {{value}}</li>
            </ul>
        </div>
        {{/each}}
    </div>
</div>