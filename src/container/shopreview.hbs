<main>
    <section>
        <div class="card">
            <div class="nav">
                {{#each navigation.links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
                <a href="#" class="nav-link disabled">Disabled</a>
            </div>
        </div>
    </section>

    <section class="row">
        <section class="col-8">
            <div>
                {{#with formBlock}}
            <div>
                <h1>{{header}}</h1>
                <p>{{rating.title}} : {{rating.value}}</p>
            </div>
        
            <div>
                {{#with actionBlock}}
                <div class="nav nav-tabs row">
                    {{#each tabs}}
                    <div class="col-4">
                        <div class="nav-item">
                            <a href="#" class="nav-link active text-primary" {{#if isActive}}checked{{/if}}>{{text}}</a>
                            <hr>
                            <br>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div>
                    {{#with report}}
                    <div class="card mt-5">
                        <div class="card-body">
                            <p>{{title}}</p>
                            <a href="{{button.link}}" class="btn btn-secondary text-white">{{button.text}}</a>
                        </div>
                    </div>
                    {{/with}}
                    <br>
                    <hr>
                </div>
                {{/with}}

                <div class="mt-5"> 
                    {{#with feedbackBlock}}
                    <h2>{{title}}</h2>
                    <div class="row">
                        {{#each buttons}}
                        <div class="col-4 mt-5">
                            {{#if isWarning}}<a href="{{link}}" class="btn btn-warning text-white">{{text}}</a>{{/if}}
                            {{#if isSuccess}}<a href="{{link}}" class="btn btn-success">{{text}}</a>{{/if}}
                            {{#if isDanger}}<a href="{{link}}" class="btn btn-danger">{{text}}</a>{{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
                    {{/with}}
            </div>
            {{/with}}
            </div>
        </section>

        

        <section class="col-4">
            <div>
                {{#with formBlock}}
                {{#with goodsInfo}}
                
                        <div class="card mb-3">
                            <div class="card-body">
                                <img src="{{photo}}" alt="{{name}}">
                                <br>
                                <h6 class="mt-3">{{name}}</h6>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="flex-column col-6">
                                    <h4>{{price}}</h4>
                                    <p>{{#if inMarket}} Є в наявності {{/if}}</p>
                                    {{#each buttons}}
                                    {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary">{{text}}</a>{{/if}}
                                    {{#if isSecondary}}<a href="{{link}}"
                                        class="btn btn-secondary mt-3">{{text}}</a>{{/if}}
                                    {{/each}}
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-body row">
                                <p>{{seller.title}} : <b>{{seller.value}}</b></p>
                            </div>
                        </div>
                
                {{/with}}
                {{/with}}
            </div>
        </section>
    </section>
    <hr>
    <section>
        <div>
            {{#each reviewList}}
            {{>reviewItem}}
            {{/each}}
        </div>
    </section>

    <section>
        <div>
            {{#with service}}
            <div class="card text-bg-success">
                <div class="card-body text-center">
                    <h2>{{title}}</h2>
                    <p>{{description}}</p>
                    {{#each buttons}}
                    <div class="flex-column">
                        <p><a href="{{link}}" class="btn btn-primary">{{text}}</a></p>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
    </section>

    <section>
        <div class="row">
            <div class="nav">
                {{#each footer}}
                {{#with this}}
                <div class="nav-item flex-column col-2">
                    <a href="{{[0].link}}" class="nav-link">{{[0].text}}</a>
                    <a href="{{[1].link}}" class="nav-link">{{[1].text}}</a>
                    <a href="{{[2].link}}" class="nav-link">{{[2].text}}</a>
                    <a href="{{[3].link}}" class="nav-link disabled">{{[3].text}}</a>
                </div>
                {{/with}}
                {{/each}}
            </div>
        </div>
        <hr>
    </section>

</main>