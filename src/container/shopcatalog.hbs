<main>
    <section>
        <div class="card">
            <div class="nav">
                {{#each navigation.links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
                <a href="#" class="nav-link disabled">Disabled</a>
            </div>
        </div>
    </section>

    <section class="row"> 
        {{#each breadcrumb}}
        <div class="col">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{url}}">{{name}}</a>
                </li>
            </ol>
        </div>
        {{/each}}
    </section>

    <section>
        <div>
            <h1>{{header}}</h1>
        </div>
        <div class="row">
            {{#each sortBlock}}
            <div class="col-3">
                <select  class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <div>
                    <option value="{{value}}">{{text}}</option>
                    </div>
                    {{/each}}
                </select>
            </div>
            {{/each}}
        </div>
    </section>

    <section class="row">
        <div class="col-4">
            {{#with filterBlock}}
            <div class="card">
                <div class="card-body">
                    <div>
                        {{#with sellers}}
                        <div class="form-label">{{title}}</div>
                        <div class="form-check">
                            {{#each list}}
                            <div>
                                <label class="form-check-label">{{value}}</label>
                                <input name="{{value}}" type="checkbox" class="form-check-input">
                            </div>
                            {{/each}}
                        </div>
                        <hr>
                        {{/with}}
                    </div>

                    <div>
                        {{#with brands}}
                        <div class="form-label">{{title}}</div>
                        <div>
                            <input placeholder="{{input.placeholder}}" class="form-control">
                        </div>
                        <div class="form-check">
                            {{#each options}}
                            <div>
                                <label class="form-check-label">{{value}}</label>
                                <input name="{{value}}" type="checkbox" class="form-check-input">
                            </div>
                            {{/each}}
                        </div>
                        <hr>
                        {{/with}}
                    </div>

                    <div>
                        {{#with price}}
                        <div class="form-label">{{title}}</div>
                        <div><input placeholder="{{range.from}}" class="form-control"></div>
                        <div class="mt-3"><input placeholder="{{range.to}}" class="form-control"></div>
                        <div class="mt-3">
                            <a href="{{button.link}}" class="btn btn-outline-secondary">{{button.text}}</a>
                        </div>
                        <hr>
                        {{/with}}
                    </div>

                    <div>
                        {{#each filterList}}    
                        <div class="form-label">{{title}}</div>
                        <div class="form-check">
                            {{#each options}}
                            <div>
                                <label class="form-check-label">{{value}}</label>
                                <input name="{{value}}" type="checkbox" class="form-check-input">
                            </div>
                            {{/each}}
                        </div>
                        <hr>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/with}}
        </div>

        <div class="col-8">
            <div class="row">
                {{#each goodsList}}
                <div class="col-6">
                    {{>catalogItem}}
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    <section>
        <div>
            {{#with service}}
            <div class="card text-center text-bg-success">
                <div class="card-body">
                    <h2>{{title}}</h2>
                    <p>{{description}}</p>
                    {{#each buttons}}
                    <div class="flex-column">
                        <p><a href="{{link}}" class="btn btn-primary">{{text}}</a></p>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
        <hr>
    </section>

    <section>
        <div class="row">
            <div class="nav">
                {{#each footer}}
                {{#with this}}
                <div class="nav-item flex-column col-2">
                    <a href="{{[0].link}}" class="nav-link">{{[0].text}}</a>
                    <a href="{{[1].link}}" class="nav-link">{{[1].text}}</a>
                    <a href="{{[2].link}}" class="nav-link">{{[2].text}}</a>
                    <a href="{{[3].link}}" class="nav-link disabled">{{[3].text}}</a>
                </div>
                {{/with}}
                {{/each}}
            </div>
        </div>
        <hr>
    </section>
</main>