<main>
    <section>
        <div class="card">
            <div class="nav">
                {{#each navigation.links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
                <a href="#" class="nav-link disabled">Disabled</a>
            </div>
        </div>
    </section>

    <section>

    </section>

    <section>
        <div class="row g-3">
            <h1>{{header}}</h1>
            {{#with purchase}}
            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item">
                    <a href="#" class="nav-link active text-primary">{{this}}</a>
                </div>
                {{/each}}
            </div>
            {{#with actionBlock}}
            <div class="col-4">
                <form><input class="form-control"></form>
            </div>
            <div class="col-4">
                <div class="row">
                    {{#each buttons}}
                    <div class="col-4">
                        {{#if isSuccess}}<a href="{{link}}" class="btn btn-success text-white">{{text}}</a>{{/if}}
                        {{#if isOutline}}<a href="{{link}}" class="btn btn-outline-success">{{text}}</a>{{/if}}
                        {{#if isDanger}}<a href="{{link}}" class="btn btn-outline-danger">{{text}}</a>{{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
            {{/with}}
        </div>
        <hr>
    </section>

    <section>
        <div>
            {{#with purchase}}
            <div class="row mb-3">
                {{#each itemList}}
                {{>purchaseItem}}
                <hr>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>

    <section>
        <div>
            {{#with userInfo}}
            <h2>{{title}}</h2>
            <div class="card">
                {{#with profileData}}
                <div class="card-body">
                    <h3 class="card-title">{{title}}</h3>
                    <div class="card mb-3">
                        <div class="card-body row">
                            {{#with fullName}}
                            <div class="flex-column col-4">
                                <p>{{surname.title}}</p>
                                <h4>{{surname.value}}</h4>
                            </div>
                            <div class="flex-column col-4">
                                <p>{{name.title}}</p>
                                <h4>{{name.value}}</h4>
                            </div>
                            <div class="flex-column col-4">
                                <p>{{middleName.title}}</p>
                                <h4>{{middleName.value}}</h4>
                            </div>
                            {{/with}}
                            <br>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-body row">
                            {{#with otherInfo}}
                            <div class="flex-column col-4">
                                <p>{{birthday.title}}</p>
                                <h4>{{birthday.value}}</h4>
                            </div>
                            <div class="flex-column col-4">
                                <p>{{sex.title}}</p>
                                <h4>{{sex.value}}</h4>
                            </div>
                            <div class="flex-column col-4">
                                <p>{{language.title}}</p>
                                <h4>{{language.value}}</h4>
                            </div>
                            {{/with}}
                            <br>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body row">
                            {{#each buttons}}
                            <div class="col-4">
                                {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary">{{text}}</a>{{/if}}
                                {{#if isSecondary}}<a href="{{link}}"
                                    class="btn btn-outline-secondary">{{text}}</a>{{/if}}
                                {{#if isDanger}}<a href="{{link}}" class="btn btn-outline-danger">{{text}}</a>{{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>
            {{/with}}
        </div>
    </section>


    <section>
        <div>
            {{#with userInfo.recipients}}
            <div class="card">
                <div class="card-body row">
                    <h3 class="card-title">{{title}}</h3>
                    {{#each users}}
                    <div class="card col-4 ms-3">
                        <div class="card-body">
                            <div class="flex-column">
                                <h4>{{name}}</h4>
                                <p>{{phone}}</p>
                                {{#with button}}
                                <p><a href="{{link}}" class="btn btn-primary">{{text}}</a></p>
                                {{/with}}
                            </div>
                        </div>

                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
    </section>

    <section>
        <div>
            {{#with userInfo.contacts}}
            <div class="card">
                <div class="card-body row">
                    <h3 class="card-title">{{title}}</h3>
                    {{#each contactData}}
                    <div class="card col-4 ms-">
                        <div class="card-body">
                            <div class="flex-column">
                                <h4>{{title}}</h4>
                                <p>{{value}}</p>
                                {{#with button}}
                                {{#if isPrimary}}<p><a href="{{link}}" class="btn btn-primary">{{text}}</a></p>{{/if}}
                                {{#if isSecondary}}<p><a href="{{link}}" class="btn btn-secondary">{{text}}</a></p>
                                {{/if}}
                                {{#if isDanger}}<p><a href="{{link}}" class="btn btn-danger">{{text}}</a></p>{{/if}}
                                {{/with}}
                            </div>
                        </div>

                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
    </section>

    <section>
        <div class="row">
            <div class="nav">
                {{#each footer}}
                {{#with this}}
                <div class="nav-item flex-column col-2">
                    <a href="{{[0].link}}" class="nav-link">{{[0].text}}</a>
                    <a href="{{[1].link}}" class="nav-link">{{[1].text}}</a>
                    <a href="{{[2].link}}" class="nav-link">{{[2].text}}</a>
                    <a href="{{[3].link}}" class="nav-link disabled">{{[3].text}}</a>
                </div>
                {{/with}}
                {{/each}}
            </div>
        </div>
        <hr>
    </section>

</main>