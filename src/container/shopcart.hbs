<main>
    <section>
        <div class="card">
            <div class="nav">
                {{#each navigation.links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
                <a href="#" class="nav-link disabled">Disabled</a>
            </div>
        </div>
    </section>

    <section>
        <div class="row g-3">
            {{#with header}}
            <h1 class="text">{{title}}</h1>
            <p><a href="{{button.link}}" class="btn btn-outline-secondary">{{button.text}}</a></p>
            {{/with}}
        </div>
        <hr>
    </section>

    <section>
        <div class="row g-3">
            {{#each goodsBlock}}
            {{>cartGoodsItem}}
            {{/each}}
        </div>
        <hr>
    </section>

    <section>
        <div>
            {{#with total}}
            <div class="flex-column">
                <h4>{{title}}</h4>
                <h2>{{amount}}</h2>
                <p>{{delivery}}</p>
                {{#each buttons}}
                <div class="">
                    {{#if isSuccess}}<p><a href="{{link}}" class="btn btn-success">{{text}}</a></p>{{/if}}
                    {{#if isOutline}}<p><a href="{{link}}" class="btn btn-outline-success">{{text}}</a></p>{{/if}}
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
        </div>
        <hr>
    </section>

    <section>
        <div class="row g-3">
            {{!-- <div class="col-12"> --}}
                {{#with goodsOtherBlock}}

                <h2 class="text-center">{{title}}</h2>
                {{#each cards}}
                <div class="card col-4">
                    <img class="card-img-top" src="{{image}}" alt="{{title}}">
                    <div class="card-header">
                        <h6 class="card-title">{{title}}</h6>
                        {{#if isHot}}<button class="btn btn-sm btn-warning text-white">HOT!</button>{{/if}}
                        {{#if isNew}}<button class="btn btn-sm btn-primary">New</button>{{/if}}
                    </div>
                    <div class="card-body">
                        <p>{{description}}</p>
                    </div>
                </div>
                {{/each}}

                {{/with}}
                {{!--
            </div> --}}
        </div>
    </section>

    <section>
        <div>
            {{#with subscribe}}
            <div class="card text-bg-dark">
                <div class="card-body">
                    <h2>{{header}}</h2>
                    <p>{{description}}</p>
                    {{#each buttons}}
                    <div class="flex-column">
                        <p><a href="{{link}}" class="btn btn-primary">{{text}}</a></p>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
        <hr>
    </section>

    <section>
        <div class="row">
            <div class="nav">
                {{#each footer}}
                {{#with this}}
                <div class="nav-item flex-column col-2">
                    <a href="{{[0].link}}" class="nav-link">{{[0].text}}</a>
                    <a href="{{[1].link}}" class="nav-link">{{[1].text}}</a>
                    <a href="{{[2].link}}" class="nav-link">{{[2].text}}</a>
                    <a href="{{[3].link}}" class="nav-link disabled">{{[3].text}}</a>
                </div>
                {{/with}}
                {{/each}}
            </div>
        </div>
        <hr>
    </section>

</main>